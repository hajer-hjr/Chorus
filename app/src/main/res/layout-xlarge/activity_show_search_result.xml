<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:id="@+id/parent"
style="@style/SJB_CustomLayout"
   android:background="#26dfac">
<android.support.design.widget.AppBarLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:theme="@style/AppTheme.AppBarOverlay">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:titleTextColor="#319b87"
        android:theme="@style/GalaxyZooThemeToolbarDarkOverflow"
        app:popupTheme="@style/AppTheme.PopupOverlay" />

</android.support.design.widget.AppBarLayout>


    <ImageView
        android:layout_width="wrap_content"
        android:gravity="center"
        android:src="@drawable/icon_location"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/address"
        android:gravity="center"
        android:layout_width="match_parent"
        android:textColor="#ffffff"
        android:textSize="16dp"
        android:textStyle="bold"
        android:layout_height="wrap_content" />
    <LinearLayout
      android:layout_width="match_parent"
      android:orientation="vertical"
        android:gravity="center"
    android:layout_height="match_parent">
    <chorus.chorus.com.chorus.CircleMenu android:layout_width="match_parent"
        android:layout_height="400dp"
        android:id="@+id/menu"
        xmlns:android="http://schemas.android.com/apk/res/android" />
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_height="wrap_content">
        <ImageButton
            android:clickable="true"
            style="@style/SJB_myaccountButton"
            android:layout_width="wrap_content"
            android:id="@+id/goback"
            android:src="@drawable/back_30"
            android:layout_height="wrap_content" />
        <RelativeLayout
            android:layout_width="10dp"
            android:layout_height="55dp">
            <View
                android:layout_width="1dp"
                android:layout_height="fill_parent"
                android:layout_gravity="center"
                android:background="#ffffff"
                android:layout_marginBottom="3dp"
                android:layout_marginTop="3dp"
                android:layout_alignParentRight="true" />

        </RelativeLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_height="wrap_content">
        <TextView
            android:id="@+id/heure"
            android:paddingLeft="5dp"
            android:layout_width="wrap_content"
            android:textColor="#ffffff"
            android:textSize="20dp"
            android:textStyle="bold"
            android:text="HEURE"
            android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/heureval"
                android:layout_width="wrap_content"
                android:textColor="#ffffff"
                android:textSize="16dp"
                android:paddingLeft="5dp"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <RelativeLayout
            android:layout_width="10dp"
            android:layout_height="55dp">
            <View
                android:layout_width="1dp"
                android:layout_height="fill_parent"
                android:layout_gravity="center"
                android:background="#ffffff"
                android:layout_marginBottom="3dp"
                android:layout_marginTop="3dp"
                android:layout_alignParentRight="true" />

        </RelativeLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_height="wrap_content">
        <TextView
            android:id="@+id/distance"
            android:layout_width="wrap_content"
            android:textColor="#ffffff"
            android:textSize="20dp"
            android:paddingLeft="5dp"
            android:text="DISTANCE"
            android:textStyle="bold"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/distanceval"
            android:layout_width="wrap_content"
            android:textColor="#ffffff"
            android:paddingLeft="5dp"
            android:textSize="16dp"
            android:text="10km"
            android:layout_height="wrap_content" />
    </LinearLayout>
    </LinearLayout>
    </LinearLayout>
</LinearLayout>

